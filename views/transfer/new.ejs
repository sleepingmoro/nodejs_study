<form action="/transfer/pay" method="post">
    <div class="form-group">
        <input type="email" id="user_email" class="form-control" aria-describedby="emailHelp" placeholder="상대방의 이메일 주소를 입력하세요.">
        <input type="number" id="amount" class="form-control" placeholder="보낼 금액을 입력하세요.">
    </div>
    <div id="msg_div"></div>
    <div id="btn_div">
        <img id="spinner" style="height: 33px; display: none;" src="/images/spinner.gif">
        <button id="pay_btn" type="button" class="btn btn-primary">송금하기</button>
    </div>
</form>
